<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D64MauiApp.Controls.MenuControl">

    <ContentView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/C64Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentView.Resources>

    <ContentView.GestureRecognizers>
        <PointerGestureRecognizer PointerExited="OnPointerExited" />
    </ContentView.GestureRecognizers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" x:Name="MenuStackLayout" Style="{StaticResource MenuStackLayoutStyle}">
            <!-- Menu items will be added here dynamically -->
        </StackLayout>

        <Border Grid.Row="1" x:Name="PopupMenu" IsVisible="False" Style="{StaticResource PopupMenuBorderStyle}">
            <StackLayout x:Name="PopupMenuStack" Margin="0"
                         Style="{StaticResource MenuStackLayoutStyle}"
                         VerticalOptions="Start" HorizontalOptions="Start">
                <!-- Popup menu items will be added here dynamically -->
            </StackLayout>
        </Border>
    </Grid>

</ContentView>
