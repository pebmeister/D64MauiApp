<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:D64MauiApp.Controls"
             x:Class="D64MauiApp.MainPage">

    <Grid BackgroundColor="{StaticResource C64LightBlue}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="1" BackgroundColor="{StaticResource C64Blue}" Margin="50,0,50,50" 
                    HorizontalOptions="Fill" VerticalOptions="Fill">
        </ScrollView>

        <StackLayout Grid.Row="0" Grid.RowSpan="2" HorizontalOptions="Start" VerticalOptions="Start">
            <controls:MenuControl x:Name="FileMenuControl" 
                               C64MenuName="{Binding FileMenuName, Mode=OneWay}" 
                               C64MenuItemNames="{Binding FileMenuItems, Mode=OneWay}"
                               C64Commands="{Binding FileMenuCommands, Mode=OneWay}" />
        </StackLayout>
    </Grid>
</ContentPage>
